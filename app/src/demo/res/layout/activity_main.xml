<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.mio.jrdv.ezbackandhome.MainActivity">

    <Switch
        android:text="Service Enabled"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/switch1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:clickable="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        />

    <Switch
        android:text="Show Panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/switch2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="200dp"
        android:checked="true"
        android:clickable="true"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="FINISH"
        android:id="@+id/btn_start"
        android:onClick="start"
        android:textColor="#ffffff"
        android:background="@android:color/holo_blue_bright"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <ImageButton
        android:id="@+id/helpbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/flat_help1"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:onClick="HelpPulsado"
        android:layout_alignParentBottom="true"
         />

    <ImageButton
        android:id="@+id/adbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_plus"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="30dp"
        android:onClick="AnuncioPulsado"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instext"
        android:textSize="15dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/switch1"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/info"

        android:layout_alignParentStart="true" />


    <com.tomer.fadingtextview.FadingTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/instext"
        app:timeout="500"
        android:gravity="center"
        android:textSize="45dp"
        android:layout_marginTop="18dp"
        app:texts="@array/examples"
        android:layout_alignParentStart="true"
        android:id="@+id/fadingTextView"
        style="@style/TextAppearance.AppCompat.Headline"
        android:textColor="@android:color/background_dark"/>





</RelativeLayout>
